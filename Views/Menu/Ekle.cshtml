@model StarbucksWeb.Models.Icecek

<div class="card shadow-sm p-4">
    <h2 class="fw-bold mb-4" style="color: #1E3932;">Yeni İçecek Ekle</h2>

    <form action="/Menu/Ekle" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">İçecek Adı</label>
            <input type="text" name="Ad" class="form-control" placeholder="Örn: Latte" />
        </div>

        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <select name="Kategori" class="form-select">
                <option value="Kahve">Kahve</option>
                <option value="Cay">Çay</option>
                <option value="Frappuccino">Frappuccino</option>
                <option value="Yiyecek">Yiyecek</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Boyut</label>
            <select name="Boyut" class="form-select">
                <option value="Tall">Tall</option>
                <option value="Grande">Grande</option>
                <option value="Venti">Venti</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Fiyat (₺)</label>
            <input type="number" step="0.01" name="Fiyat" class="form-control" />
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success px-5" style="background-color: #00704A;">Kaydet</button>
            <a href="/Menu" class="btn btn-outline-secondary ms-2">İptal</a>
        </div>
    </form>
</div>